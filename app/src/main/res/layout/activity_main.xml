<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ui.activities.MainActivity">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
        <Button
                android:text="上\n行"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:id="@+id/btnUpStream"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:background="@drawable/shape_btn_radius"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="30dp"
                android:textSize="18sp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_up"/>
        <Button
                android:text="下\n行"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:id="@+id/btnDownStream"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_btn_radius"
                android:textColor="@android:color/white"
                android:elevation="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:drawableBottom="@drawable/ic_down"/>
    </RelativeLayout>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_setting"
            android:id="@+id/ivSetting" android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>